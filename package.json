{
  "name": "taskler",
  "scripts": {
    "dev:website": "parcel serve src/index.pug --dist-dir build/website",
    "build:website": "parcel build src/index.pug --dist-dir build/website",
    "dev:extension": "parcel watch manifest.json --dist-dir build/extension --config @parcel/config-webextension --host localhost",
    "build:extension": "npm run bundle:extension && gulp zip",
    "bundle:extension": "parcel build manifest.json --dist-dir build/extension --config @parcel/config-webextension"
  },
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "devDependencies": {
    "@babel/core": "~7.19.1",
    "@babel/plugin-transform-runtime": "~7.19.1",
    "@babel/runtime-corejs2": "~7.19.2",
    "@parcel/config-webextension": "^2.7.0",
    "@parcel/packager-raw-url": "^2.7.0",
    "@parcel/packager-xml": "^2.7.0",
    "@parcel/transformer-pug": "^2.7.0",
    "@parcel/transformer-stylus": "^2.7.0",
    "@parcel/transformer-webmanifest": "^2.7.0",
    "@parcel/transformer-xml": "^2.7.0",
    "buffer": "^6.0.3",
    "gulp": "~4.0.2",
    "gulp-zip": "~5.1.0",
    "jszip": "~3.10.1",
    "parcel": "^2.7.0",
    "pug": "~3.0.2",
    "quill": "~1.3.7",
    "quill-magic-url": "~4.2.0",
    "stylus": "~0.59.0"
  }
}
